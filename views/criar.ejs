<!DOCTYPE html>
<html lang="pt-br">
<%- include('./parciais/head.ejs', { titulo: titulo }) %>
<body>
   <%- include('./parciais/nav.ejs') %>
    <div class="criar-conteudo-blog">
        <form method="POST" action="/blog">
            <div class="form-row">
                <div class="form-group">
                    <label for="titulo">Titulo do blog</label>
                    <input type="text" id="titulo" name="titulo" placeholder="Digite o título aqui..." required>
                </div>
                <div class="form-group">
                    <label for="autor">Autor do blog</label>
                    <input type="text" id="autor" name="autor" placeholder="Seu nome" required>
                </div>
            </div>
            <div class="form-group">
                <label for="conteudo">Conteúdo do blog:</label>
                <textarea id="conteudo" name="conteudo" placeholder="Escreva o conteúdo do seu post..." required rows="10"></textarea>
            </div>
            <button type="submit">Criar Blog</button>
        </form>
    </div>
    <%- include('./parciais/footer.ejs') %>
</body>
</html>