<!DOCTYPE html>
<html lang="pt-br">

<%- include('./parciais/head.ejs', { titulo: titulo }) %>

<body>

    <!-- Include the navigation partial -->
    <%- include('./parciais/nav.ejs') %>

    <div class="conteudo-blog">
        <h2>Bem-vindo ao Meu Blog!</h2>
        <% if (blogs && blogs.length > 0) { %>
            <ul>
                <% blogs.forEach(blog => { %>
                    <li>
                        <h3><%= blog.titulo %></h3>
                        <p><%= blog.conteudo %></p>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>Nenhum blog encontrado. Que tal criar um novo? ðŸ˜‰</p>
        <% } %>
    </div>
    <!-- Include the footer partial -->
    <%- include('./parciais/footer.ejs') %>
</body>
</html>